/**index.wxss**/
.loading {
  position: absolute;
  /* 注意图层覆盖问题 */
  z-index: 1;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  transition: all 1.2s steps(1, end);
}

.fadeout {
  opacity: 0;
}

image {
  display: block;
}

.logo {
  margin-left: 15%;
  margin-top: 50%;
  width: 70%;
  height: 20%;
  /* background-color: gray; */
}

.plane {
  position: absolute;
  margin-left: 50%;
  margin-top: -5%;
  width: 25%;
  height: 10%;
  /* background-color: orange; */
}

.fly {
  animation: fly 1.2s ease-in-out 0.2s;
}

@keyframes fly {
  to {
    margin-top: -15%;
    margin-left: 100%;
  }
}

.message {
  font-family: 'X-xiheiti', sans-serif;
  font-size: 80rpx;
  text-align: center;
  opacity: 0;
  transition: all 1s ease 1.2s;
}

.fadein {
  opacity: 1;
  z-index: 2;
}

text {
  font-family: 'X-xiheiti'
}

button {
  z-index: 2;
}